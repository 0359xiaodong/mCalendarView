            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:id="@+id/id_date_cell_mark_bar"
            android:layout_toRightOf="@id/id_date_cell_textview"
            />
    </LinearLayout>

